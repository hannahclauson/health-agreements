%h1="Editing #{@company.name} Info:"

= form_for :company, url: company_path(@company), method: :patch do |f|
  = if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "Error")} prohibited this company from being saved"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :name
    = f.text_field :name

  %p
    = f.label :url
    = f.text_field :url

  %p
    = f.label :description
    = f.text_field :description

  = f.submit
