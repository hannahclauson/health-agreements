.container
  = content_for :head do
    %title= "Compare #{@a.name} :: #{@b.name} Practices"

  .page-header
    %h1= "Compare #{@a.name} :: #{@b.name} Practices"


  %h3="Impact Factor: #{@a.impact_factor.nil? ? 'n/a' : @a.impact_factor}"
  %table
    %tr.info
      %th= @a.name
      %th= @b.name
    %tr
      %td= @a.impact_factor
      %td= @b.impact_factor

  %h3 Badges:
  %table
    %tr.info
      %th Badge
      %th= @a.name
      %th= @b.name
    - @all_badge_names.each do |name|
      - b = @a_badges[name].nil? ? @b_badges[name] : @a_badges[name]
      %tr
        %td          
          %a.badge-row{:href => badge_path(b)}
            = render partial: "shared/badge", object: b, locals: {size: ''}
            %span.name
              %h4= name
        %td
          - if @a_badges[name].nil?
            %span.glyphicon.glyphicon-remove
          - else
            %span.glyphicon.glyphicon-ok
        %td
          - if @b_badges[name].nil?
            %span.glyphicon.glyphicon-remove
          - else
            %span.glyphicon.glyphicon-ok

