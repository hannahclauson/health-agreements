%h1= @company.name

%a{:href => @company.url} Website

%hr

%p= @company.description

%a=link_to("Edit", edit_company_path(@company))

%h2 Practices:

%table
  %tr
    %th Name
    %th Implementation
    %th Notes
    %th{colspan: 2} Actions
  - @company.practices.each do |p|
    %tr
      %td= p.guideline.name
      %td= p.implementation_text
      %td= p.notes
      %td= link_to('Show', company_practice_path(@company,p)) 
      %td= link_to('Delete', company_practice_path(@company,p), method: :delete) 


%h2 Add a Practice

= form_for ([@company, @company.practices.build]) do |f|
  %p 
    = f.label :implementation
    = select_tag('practice[implementation]', options_for_select(@enumerated_implementations))

  %p
    = f.label :notes
    = f.text_field :notes

  %p
    = f.label :guideline_id
    = select_tag('practice[guideline_id]', options_for_select(@enumerated_guidelines))

  = f.submit

  
