.container
  = content_for :head do
    %title= "#{@company.name} Practices"

  .page-header
    %h1= @company.name
    %a{:href => @company.url, :target => "_blank"} Visit Website
    %a=link_to("Edit", edit_company_path(@company), {class: 'btn btn-xs btn-info page_edit'})

  .panel.panel-default
    .panel-heading Description
    .panel-body     
      %p= @company.description

  = render 'practices/panel_list'

  .panel.panel-default
    .panel-heading
      %h2 Add a Practice
    .panel-body
      = render 'practices/form'
  
