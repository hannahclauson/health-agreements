= form_for [@company, @legal_document], html: {class: 'form-horizontal'} do |f|
  = if @legal_document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@legal_document.errors.count, "Error")} prohibited this legal_document from being saved"
      %ul
        - @legal_document.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10.input_wrapper
      = f.text_field :name

  .field.form-group
    = f.label :url, class: 'col-sm-2 control-label'
    .col-sm-10.input_wrapper
      = f.text_field :url

  .field.form-group
    %label.col-sm-2.control-label
    .col-sm-10.input_wrapper
      = f.submit
