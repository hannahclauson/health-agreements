= form_for @guideline_tag, html: {class: 'form-horizontal'} do |f|

  = if @guideline_tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guideline_tag.errors.count, "Error")} prohibited this guideline from being saved"
      %ul
        - @guideline_tag.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10.input_wrapper
      = f.text_field :name

  .field.form-group
    %label.col-sm-2.control-label
    .col-sm-10.input_wrapper
      = f.submit

