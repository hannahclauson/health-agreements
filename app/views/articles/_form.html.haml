= form_for [@company, @article], html: {class: 'form-horizontal'} do |f|
  = if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "Error")} prohibited this article from being saved"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :title, class: 'col-sm-2 control-label'
    .col-sm-10.input_wrapper
      = f.text_field :title

  .field.form-group
    = f.label :summary_url, class: 'col-sm-2 control-label'
    .col-sm-10.input_wrapper
      = f.text_field :summary_url

  .field.form-group
    = f.label :download_url, class: 'col-sm-2 control-label'
    .col-sm-10.input_wrapper
      = f.text_field :download_url

  .field.form-group
    %label.col-sm-2.control-label
    .col-sm-10.input_wrapper
      = f.submit
