.container
  .page-header
    %h1 Articles using data from #{@company.name}

  %ul.list-group
    - @articles.each do |a|
      %li.list-group-item
        = link_to(a.title, company_article_path(a.company, a))
        - if (can? :edit, Article) || (can? :delete, Article)
          %span.actions.btn-group.btn-group-xs.btn-group-link
            - if can? :edit, Article
              = link_to("Edit", edit_company_article_path(a.company, a), {class: "btn btn-xs btn-info"})
            - if can? :delete, Article
              = link_to("Delete", company_article_path(a.company, a), class: "btn btn-xs btn-danger", method: :delete)

